subject "Test Subject 1"
chapterNumber 1.1
chapterName "Sandbox"
script{"
    this.computeDivisibilityChoices = function( rangeMean, divisibleByNum ) {
        var choices = [] ;
        for( var i=0; i<5; i++ ) {

            if( i==0 ) { 
                choices[0] = $util.randomInt( rangeMean-5, rangeMean+5 ) * 
                             divisibleByNum ; 
            }
            else {
                var num = 0 ;
                do {
                    num = $util.randomInt( rangeMean-5, rangeMean+5 )*divisibleByNum - 1 ;
                }
                while( choices.indexOf( num ) != -1 ) ;
                choices[i] = num ; 
            }
        }
        return choices ;
    }

    this.getRangeMean = function( $e ) {
        switch( $e ) {
            case 'A1' : return 110;
            case 'A2' : return 80;
            case 'B1' : return 50;
            case 'B2' : return 20;
            case 'C1' :
            case 'C2' : return 15;
            case 'D'  : return 7 ;
        }
    }
"}

