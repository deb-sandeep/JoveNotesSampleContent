@multi_choice "Find the number which is divisible by 3" {
    @options {
        "{{@var N1}}" correct,
        "{{@var N2}}", "{{@var N3}}", "{{@var N4}}", "{{@var N5}}"
    }
}
script_expressions {
    "N1" = "$q.N[0]", "N2" = "$q.N[1]", "N3" = "$q.N[2]", 
    "N4" = "$q.N[3]", "N5" = "$q.N[4]"
}
script {"
    this.N = [] ;
    this.initialize = function( $e ) {
        this.N = $c.computeDivisibilityChoices( $c.getRangeMean( $e ), 3 ) ;
    }
"}